<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass.tccart" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddingCustomerActivity"
            android:label="@string/title_activity_adding_customer" >
        </activity>
        <activity
            android:name=".ProcessPurchaseActivity"
            android:label="@string/title_activity_purchase" >
        </activity>
        <activity
            android:name=".EditCustomerActivity"
            android:label="@string/title_activity_edit_customer" >
        </activity>
        <activity
            android:name=".PrintCustomerCardActivity"
            android:label="@string/title_activity_print_customer_card" >
        </activity>
        <activity
            android:name=".CustomerHistoryActivity"
            android:label="@string/title_activity_customer_history" >
        </activity>
    </application>

</manifest>
